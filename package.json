{
  "name": "movies-api-restful",
  "version": "1.0.0",
  "description": "Restful api for movies, cast etc",
  "main": "server.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "nodemon ./server.js --exec babel-node --presets babel-preset-env",
    "lint": "eslint *.js --quiet",
    "debug": "ndb nodemon ./server.js --exec babel-node --presets babel-preset-env",
    "validate": "npm run lint && npm outdated --depth 0"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.17.3",
    "ndb": "^1.0.24",
    "prettier": "^1.14.2"
  },
  "devDependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint": "^5.4.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "git add"
    ]
  }
}
